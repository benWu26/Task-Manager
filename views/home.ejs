<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>

    <div class="header">
        <div class="title" style="padding: 25px;">Task Manager</div>
        <div class="logout-section">
            <form action="/logout" method="GET">
                <button class="button" type="submit">Logout</button>
            </form>
        </div>
    </div>

    <div class="main-content">
        <div class="search-container">
                <input type="text" id="searchInput" placeholder="Search for task..." onkeyup="searchTasks()">
        </div>

        <div class="task-list">
            <% tasks.forEach(function(task, index) { %>
                <div class="task">
                    <div class="task-header">Task: <%= task.title %>
                    </div>
                    <div class="task-details">
                        <p><strong>Notes:</strong>
                            <%= task.notes %>
                        </p>
                        <p><strong>Owner:</strong>
                            <%= task.owner %>
                        </p>
                        <p><strong>Completeness:</strong>
                            <% if (task.completeness == 'Incomplete') { %>
                                <input type="checkbox" id="<%= task.title %><%= task.notes %><%= task.owner %>"
                                    onclick="updateCompleteness('<%= task.title %>', '<%= task.notes %>', '<%= task.owner %>')">
                            <% } else { %>
                                    <input type="checkbox" id="<%= task.title %><%= task.notes %><%= task.owner %>"
                                        onclick="updateCompleteness('<%= task.title %>', '<%= task.notes %>', '<%= task.owner %>')"
                                        checked>
                            <% } %>
                        </p>
                        <button onclick="deleteTask('<%= task.title %>', '<%= task.notes %>', '<%= task.owner %>')">Delete
                            Task</button>
                    </div>
                </div>
            <% }); %>
        </div>

        
    </div>
    <div class="add-task-section">
        <h2>Add Task</h2>
        <form action="/addtask" method="POST">
            <select class="dropdown2" name="owner">
                <% usernames.forEach(function(username) { %>
                    <option value="<%= username %>">
                        <%= username %>
                    </option>
                    <% }); %>
            </select>
            <input type="text" id="Title" name="textbox" placeholder="Task Title" style="width: 200px;" required>
            <textarea class="notes" name="notes" placeholder="Notes"></textarea>
            <button class="button" type="submit">Add Task</button>
        </form>
    </div>
    <div class="info">
        <button class="info-btn">â„¹</button>
        <div class="info-content">
            <p> Welcome to the home page</p>
        </div>
    
    </div>
    <script>
        function searchTasks() {
            var input, filter, tasks, task, notes, i, txtValue;
            input = document.getElementById('searchInput');
            filter = input.value.toUpperCase();
            tasks = document.getElementsByClassName('task-list');
            task = tasks[0].getElementsByClassName('task');

            for (i = 0; i < task.length; i++) {
                notes = task[i].getElementsByTagName('p')[0];
                txtValue = notes.textContent || notes.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    task[i].style.display = '';
                } else {
                    task[i].style.display = 'none';
                }
            }
        }

        function updateCompleteness(title, notes, owner) {
                var taskId = title + notes + owner;
                console.log('Generated task ID:', taskId); // Log the generated ID

                var taskCompleteCheckbox = document.getElementById(taskId);
                if (!taskCompleteCheckbox) {
                    console.error('Task checkbox not found:', taskId);
                    return;
                }

                var newCompleteness = taskCompleteCheckbox.checked ? 'Complete' : 'Incomplete';

                console.log(newCompleteness);

                fetch('/updateTask', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ title: title, notes: notes, owner: owner, completeness: newCompleteness })
                })
                    .then(response => {
                        if (response.ok) {
                            console.log('Task completeness updated successfully.');
                        } else {
                            console.error('Failed to update task completeness.');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
            }


        function deleteTask(title, notes, owner) {
            fetch('/deleteTask', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ title: title, notes: notes, owner: owner })
            })
                .then(response => {
                    if (response.ok) {
                        console.log('Task deleted successfully.');
                        location.reload(); // Refresh the page after deleting the task
                    } else {
                        console.error('Failed to delete task.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }


    </script>
</body>

</html>